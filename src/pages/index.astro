---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

---

<Layout>
	<Header />
	<main>
		text and things
	</main>
	<script type="module" src="/main.js"></script>
	<Footer />
</Layout>

<style>
	canvas {
		position: fixed;
		top: 0;
		left: 0;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
